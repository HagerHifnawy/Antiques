<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="207dp"
        android:layout_height="110dp"

        android:layout_marginTop="60dp"
        android:src="@drawable/firstintro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="246dp"
        android:layout_height="43dp"
        android:text="@string/welcome_back"
        android:textSize="30sp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="212dp"
        android:layout_height="24dp"
        android:text="Please,login to your account."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="259.5dp"
        android:layout_height="50.52dp"
        android:layout_margin="50dp"
        android:ems="10"
        android:hint="@string/email"
        
        android:inputType="textEmailAddress"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableEnd="@drawable/ic_email_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="259.5dp"
        android:layout_height="50.5dp"
        android:layout_margin="20dp"
        android:drawableEnd="@drawable/ic_password_24"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="@string/fordet_your_password_recover"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="212dp"
        android:layout_height="24dp"
        android:text="@string/here"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="470dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />
    <Button
        android:id="@+id/forget_pass_btn"
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="320dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTextPassword" />


    <Button
        android:id="@+id/Login_btn"
        android:layout_width="192dp"
        android:layout_height="44.55dp"
        android:background="@drawable/rounded_button"
        android:text="LOGIN"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_pass_btn" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="@string/don_t_have_an_account"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_btn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:text="@string/register_now"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="420dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_btn" />
    <Button
        android:id="@+id/register_account_btn"
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="250dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Login_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>