<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="207dp"
        android:layout_height="110dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/firstintro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="246dp"
        android:layout_height="43dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:text="@string/welcome_back"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/Login_tv"
        android:layout_width="210dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="Please,login to your account"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_tv" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="259.5dp"
        android:layout_height="50.52dp"
        android:layout_margin="50dp"
        android:drawableEnd="@drawable/ic_email_24"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_tv" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="259.5dp"
        android:layout_height="50.5dp"
        android:layout_margin="20dp"
        android:drawableEnd="@drawable/ic_password_24"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

    <TextView
        android:id="@+id/forgetpass_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/fordet_your_password_recover"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <Button
        android:id="@+id/forget_pass_btn"
        android:layout_width="102dp"
        android:layout_height="46dp"
        android:layout_marginStart="310dp"
        android:background="@android:color/transparent"
        android:padding="@dimen/_2sdp"
        android:text="here"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@+id/forgetpass_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/forgetpass_tv1"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/Login_btn"
        android:layout_width="192dp"
        android:layout_height="44.55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundedbutton"
        android:text="LOGIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_pass_btn" />

    <TextView
        android:id="@+id/register_account_tv1"
        android:layout_width="228dp"
        android:layout_height="47dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:text="@string/don_t_have_an_account"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Login_btn"
        app:layout_constraintVertical_bias="0.268" />

    <Button
        android:id="@+id/register_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:backgroundTint="@color/Backgroundcolor"
        android:text="Register now"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/register_account_tv1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/register_account_tv1" />


</androidx.constraintlayout.widget.ConstraintLayout>