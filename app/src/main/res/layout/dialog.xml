<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp">
    <TextView
        android:id="@+id/forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:gravity="center"
        android:text="Forget Paswword"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20sdp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/phone_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/ic_baseline_phone_24"
        android:text="Phone Number"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/email_forget"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="83dp" />
    <Button
        android:id="@+id/email_forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableEnd="@drawable/ic_email_24"
        android:text="Email"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/forget_tv"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="49dp" />




</androidx.constraintlayout.widget.ConstraintLayout>